@model OnlineStore.Entities.Order

@{
    ViewData["Title"] = "Обновление заказа";
}


<h1>Обновление</h1>

<h4>Заказ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @Html.HiddenFor(p => p.Id)
            <div class="form-group">
                <label>Имя</label>
                <input asp-for="Client.FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label>Фамилия</label>
                <input asp-for="Client.LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label>Отчество</label>
                <input asp-for="Client.MiddleName" class="form-control" />
            </div>
            <div class="form-group">
                <label>Наименование товара</label>
                <input asp-for="Product.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label>Цена товара</label>
                <input asp-for="Product.Price" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Обновить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>